    <update id="update">
        update
        golden_settlements
        set
        <if test="status != null">
        status = #{status},
        </if>
        <if test="subStatus != null">
        sub_status = #{subStatus},
        </if>
        <if test="settlementCode != null">
        settlement_code = #{settlementCode},
        </if>
        <if test="processComment != null">
