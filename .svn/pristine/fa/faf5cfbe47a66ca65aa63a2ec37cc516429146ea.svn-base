    <update id="updateByStatus">
        update
            golden_settlements
        set
            status = #{status},
        <if test="payDate != null and payDate != ''">
            pay_date = #{payDate},
        </if>
        <if test="processComment != null and processComment != ''">
            process_comment = #{processComment},
        </if>
        <if test="processTime != null ">
            process_time = #{processTime}+1,
        </if>
        <if test="remarks != null and remarks != ''">
            remarks = #{remarks},
        </if>
        <if test="hangupMsg != null and hangupMsg != ''">
            hangup_msg = #{hangupMsg},
        </if>
        <if test="failReason != null and failReason !=''">
            fail_reason = #{failReason}
        </if>
            update_date = #{updateDate},
            update_by = #{updateBy}
        where
            id = #{id}
            and
            status <![CDATA[<=]]> 25
    </update>



    <update id="closeRefund">
        update
            golden_settlements
        set
            sub_status = 37,
            update_date = #{updateDt},
            update_by = #{updateBy}
        where
            id = #{id}
    </update>
    <update id="updateStatusToExecute">
        update
            golden_settlements
        set
            sub_status = 15,
            update_date = #{updateDate},
            update_by = #{updateBy}
        where
            id = #{id}
            and sub_status = 18
    </update>
    <update id="updateReqResult">
        update
            golden_settlements
        set
            update_date = #{updateDate},
            update_by = #{updateBy},
            status = #{status},
            <if test="processComment != null and processComment != ''">
                process_comment = #{processComment},
            </if>
            <if test="processTime != null ">
                process_time = process_time+1,
            </if>
            <if test="remarks != null and remarks != ''">
                remarks = #{remarks},
            </if>
            sub_status = #{subStatus}
        where
            id = #{id}
    </update>

        <update id="updateResult">
            update
            golden_settlements
            set
            update_date = #{updateDate},
            update_by = #{updateBy},
            status = #{status},
            sub_status = #{subStatus}
            where
            id = #{id}
            and status in (25,30)
        </update>



    <sql id="set_column">
