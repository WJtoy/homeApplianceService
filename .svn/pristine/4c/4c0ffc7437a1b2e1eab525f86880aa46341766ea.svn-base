package com.kkl.kklplus.golden.mq.config;

import com.kkl.kklplus.golden.mq.contans.MQConstant;
import org.springframework.amqp.core.Binding;
import org.springframework.amqp.core.BindingBuilder;
import org.springframework.amqp.core.DirectExchange;
import org.springframework.amqp.core.Queue;
import org.springframework.context.annotation.Bean;

public class GoldenSettlementsMQConfig {

    @Bean
    public Queue goldenSettlementsQueue() {
        return new Queue(MQConstant.MQ_SETTLEMENTS_EXCHANGE, true);
    }

    @Bean
    DirectExchange goldenSettlementsExchange() {
        return new DirectExchange(MQConstant.MQ_SETTLEMENTS_EXCHANGE);
    }

    @Bean
    Binding bindingGoldenSettlementsMessage(Queue goldenSettlementsQueue, DirectExchange goldenSettlementsExchange) {
        return BindingBuilder.bind(goldenSettlementsQueue)
                .to(goldenSettlementsExchange)
                .with(MQConstant.MQ_SETTLEMENTS_EXCHANGE);
    }

}
